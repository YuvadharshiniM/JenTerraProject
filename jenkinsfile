pipeline{
    agent any
    stages {
        stage('source code') {
            steps {
                echo 'Cloning...'
                   git branch: 'main', url: 'https://github.com/YuvadharshiniM/JenTerraProject/'

            }
        }
        stage('terraform') {
            steps {
                echo 'Deploying...'
                sh 'terraform init'
                sh 'terraform plan'
                sh 'terraform apply -auto-approve'

            }
        }
    }
}
